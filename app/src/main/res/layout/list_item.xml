<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0277BD">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="160sp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="5.45"
                    android:maxLines="1"
                    android:text="Title Here"
                    android:textColor="#E1F5FE"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="4.55"
                    android:gravity="right"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="By:"
                        android:textColor="#E1F5FE"
                        />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Shaik Nazeer"
                        android:textColor="#E1F5FE" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food description goes here in 2 lines
line2"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="3dp"
                android:maxLines="2"
                android:textColor="#E1F5FE"
                android:textSize="15sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="5dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created:"
                        android:textSize="15sp"
                        android:textColor="#E1F5FE"/>
                    <TextView
                        android:id="@+id/item_post_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-12-2017"
                        android:textColor="#E1F5FE"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry:"
                        android:textSize="15sp"
                        android:textColor="#E1F5FE"/>
                    <TextView
                        android:id="@+id/item_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-12-2017"
                        android:textColor="#E1F5FE"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="12"
                >
                <ImageButton
                    android:id="@+id/like"
                    android:layout_weight="4"
                    android:background="#0277BD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/like"
                    android:theme="@style/PrimaryFlatButton"
                    />
                <ImageButton
                    android:id="@+id/call"
                    android:layout_weight="4"
                    android:background="#0277BD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/oshocaller"
                    />

                <ImageButton
                    android:id="@+id/location"
                    android:layout_weight="4"
                    android:background="#0277BD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/osho_location"
                    android:theme="@style/PrimaryFlatButton"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="phone reference"
                    android:id="@+id/item_phone_number"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="phone reference"
                    android:id="@+id/item_location"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>