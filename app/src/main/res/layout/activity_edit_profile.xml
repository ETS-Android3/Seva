<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <DatePicker
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/datepicker"
        android:layout_height="400dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey_100"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">
        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop"
            />

        <ImageButton

            android:id="@+id/profileImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-130dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tushar"
            android:background="@android:color/transparent"
            />



        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_cover_image"
            android:background="#0091EA"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <View
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:clickable="true"

                android:src="@android:drawable/ic_menu_edit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/basic_info"
                android:layout_below="@id/edit_button"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:textColor="#E1F5FE"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:hint="Name"
                    android:backgroundTint="@android:color/white"
                    android:textColorHint="#E1F5FE" />

                <EditText
                    android:id="@+id/edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="normal"
                    android:hint="Contact number"
                    android:backgroundTint="@android:color/white"
                    android:textColorHint="#E1F5FE"
                    />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >


            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/organization_field"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="ORGANISATION"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#0091EA"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@color/black">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/edit_organization"
                        android:layout_height="wrap_content"
                        android:hint="Enter organisation name"
                        android:textSize="17sp"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_below="@id/organization_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_field"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="ADDRESS"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#0091EA"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@color/black">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/edit_address"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:hint="Enter location"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_below="@id/address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender_field"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="GENDER"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#0091EA"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@color/grey_100">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/edit_gender"
                        android:layout_height="wrap_content"
                        android:hint="Enter male/female/other"
                        android:textSize="17sp"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dob_field"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="DATE OF BIRTH"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:textColor="#0091EA"/>

                <TextView
                    android:id="@+id/dob"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint=" --/--/--"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:focusable="false"
                    />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/pickdob"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_picker"
                    android:textSize="20sp"
                    android:maxLines="1"
                    />
            </LinearLayout>

            <Button
                android:layout_marginTop="30dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:theme="@style/ThemeOverlay.MyDarkButton"
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>
</ScrollView>