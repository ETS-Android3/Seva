<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    android:layout_gravity="center"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <LinearLayout
                android:id="@+id/tp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_weight=""
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/editText99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="             Osho"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tp"></LinearLayout>

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Free food!!!"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/editText"
                android:layout_below="@+id/editText"
                android:text="+91 7550250345"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editText5"
                android:layout_below="@+id/editText5"
                android:ems="10"
                android:inputType="date"
                android:text="07-01-2018"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText6"
                android:layout_marginStart="18dp"
                android:text="Food" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/checkBox"
                android:text="Clothes" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/editText6"
                android:layout_marginEnd="14dp"
                android:text="Misc" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText6"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/checkBox2"
                android:checked="true"
                android:text="Books" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >

            <TextView
                android:id="@+id/editText10"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:text="I am having 2 kg of fresh apples with me. I'm willing to give them away to those who are in unrgent need, otherwise the fruits wil rot. Please contact me immediately!!!!"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:maxLines="5"
                android:singleLine="false"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_below="@id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="5dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:text="Close"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:text="I'm interested"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>